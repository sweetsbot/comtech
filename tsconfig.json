{
    "compilerOptions":
    {
        "target": "es2022", 
        "module": "es2020",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2022"],
        "sourceMap": true, 
        "outDir": "./dist", 
        "strict": true, 
        "moduleResolution": "node", 
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}